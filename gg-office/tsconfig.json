{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [{"name": "next"}]
  },
  "include": ["./src", "**/*.ts", "./dist/types/**/*.ts", "./next-env.d.ts"],
  "exclude": ["node_modules"]
}
